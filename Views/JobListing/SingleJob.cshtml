@model JobPortalApplication.Models.CompanyModel.Job

@{
    ViewData["Title"] = "Job Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <!-- HOME -->
    <section class="section-hero overlay inner-page bg-image" style="background-image: url('images/hero_1.jpg');" id="home-section">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <h1 class="text-white font-weight-bold">@Model.JobTitle</h1>
            <div class="custom-breadcrumbs">
              <a asp-controller="Home" asp-action="Index" class="nav-link active">Home</a> <span class="mx-2 slash">/</span>
              <a href="/JobListing/ViewJob">Job</a> <span class="mx-2 slash">/</span>
              <span class="text-white"><strong>@Model.JobTitle</strong></span>
            </div>
          </div>
        </div>
      </div>
    </section>

    
    <section class="site-section">
      <div class="container">
        <div class="row align-items-center mb-5">
          <div class="col-lg-8 mb-4 mb-lg-0">
            <div class="d-flex align-items-center">
              <div class="border p-2 d-inline-block mr-3 rounded">
            @if (!string.IsNullOrEmpty(Model.Company.Image))
                {
                    <img src="~/Image/@Model.Company.Image" alt="Company Image" style="width:100px; height:100px;" />
                }
                </div>
              <div>
                <h2>@Model.JobTitle</h2>
                <div>
                  <span class="ml-0 mr-2 mb-2"><span class="icon-briefcase mr-2"></span>@Model.Company.CompanyName</span>
                  <span class="m-2"><span class="icon-room mr-2"></span>@Model.Address</span>
                  <span class="m-2"><span class="icon-clock-o mr-2"></span><span class="text-primary">@Model.WorkType</span></span>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="row">

              <div class="col-6">
                 <form asp-action="SaveJob" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="jobId" value="@Model.JobId" />
            <input type="hidden" name="entryStatus" value="1" />
            <button type="submit" class="btn btn-block btn-light btn-md">
                <span class="icon-heart-o mr-2 text-danger"></span>Save Job
            </button>
        </form>  
              </div>
              <div class="col-6">
 <form asp-action="ApplyJob" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="jobId" value="@Model.JobId" />
            <input type="hidden" name="entryStatus" value="2" />
            <button type="submit" class="btn btn-block btn-primary btn-md">Apply Now</button>
        </form>               </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-8">
            <div class="mb-5">
              <figure class="mb-5"><img src="~/images/job_single_img_1.jpg" alt="Image" class="img-fluid rounded"></figure>
              <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-align-left mr-3"></span>Job Description</h3>
              <p>@Model.Description</p>
            </div>
          

            <div class="mb-5">
              <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-book mr-3"></span>Education + Experience</h3>
              <ul class="list-unstyled m-0 p-0">
                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>@Model.QuaId</span></li>
                                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>@Model.Experience</span></li>

                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Velit unde aliquam et voluptas reiciendis non sapiente labore</span></li>
                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Commodi quae ipsum quas est itaque</span></li>
                <li class="d-flex align-items-start mb-2"><span class="icon-check_circle mr-2 text-muted"></span><span>Lorem ipsum dolor sit amet, consectetur adipisicing elit</span></li>
              </ul>
            </div>
              <div class="mb-5">
              <h3 class="h5 d-flex align-items-center mb-4 text-primary"><span class="icon-book mr-3"></span>Other Details</h3>
              <ul class="list-unstyled m-0 p-0">
                <li class="mb-2"><strong class="text-black">Timing:</strong> @Model.Timing</li>
                  <li class="mb-2"><strong class="text-black">Industry:</strong> @Model.Industry</li>
                  <li class="mb-2"><strong class="text-black">WorkMode:</strong> @Model.WorkMode</li>
                     <li class="mb-2"><strong class="text-black">Language:</strong> @Model.Language</li>




              
              </ul>
            </div>
          

            <div class="row mb-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
              <div class="col-6">
 <form asp-action="SaveJob" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="jobId" value="@Model.JobId" />
            <input type="hidden" name="entryStatus" value="1" />
            <button type="submit" class="btn btn-block btn-light btn-md">
                <span class="icon-heart-o mr-2 text-danger"></span>Save Job
            </button>
        </form>     
                        </div>
              <div class="col-6">
 <form asp-action="ApplyJob" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="jobId" value="@Model.JobId" />
            <input type="hidden" name="entryStatus" value="2" />
            <button type="submit" class="btn btn-block btn-primary btn-md">Apply Now</button>
        </form>                </div>
            </div>

          </div>
          <div class="col-lg-4">
            <div class="bg-light p-3 border rounded mb-4">
              <h3 class="text-primary  mt-3 h5 pl-3 mb-3 ">Job Summary</h3>
              <ul class="list-unstyled pl-3 mb-0">
                <li class="mb-2"><strong class="text-black">Published on:</strong> @Model.EntryDate</li>
                <li class="mb-2"><strong class="text-black">Vacancy:</strong> @Model.Position</li>
                <li class="mb-2"><strong class="text-black">Employment Status:</strong> @Model.WorkType</li>
                <li class="mb-2"><strong class="text-black">Experience:</strong> @Model.Experience</li>
                <li class="mb-2"><strong class="text-black">Job Location:</strong>@Model.Address</li>
                <li class="mb-2"><strong class="text-black">Salary:</strong> @Model.Salary</li>
                <li class="mb-2"><strong class="text-black">Gender:</strong> @Model.Gender</li>
                <li class="mb-2"><strong class="text-black">Applied Candidate</strong> @Model.PositionCompleted</li>
              </ul>
            </div>

            <div class="bg-light p-3 border rounded">
              <h3 class="text-primary  mt-3 h5 pl-3 mb-3 ">Interview Mode</h3>
              <div class="px-3">
                  <ul class="list-unstyled pl-3 mb-0">
                <li class="mb-2">@Model.InterviewMode</li>

                </ul>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>

   


    <section class="pt-5 bg-image overlay-primary fixed overlay" style="background-image: url('images/hero_1.jpg');">
      <div class="container">
        <div class="row">
          <div class="col-md-6 align-self-center text-center text-md-left mb-5 mb-md-0">
            <h2 class="text-white">Get The Mobile Apps</h2>
            <p class="mb-5 lead text-white">Lorem ipsum dolor sit amet consectetur adipisicing elit tempora adipisci impedit.</p>
            <p class="mb-0">
              <a href="#" class="btn btn-dark btn-md px-4 border-width-2"><span class="icon-apple mr-3"></span>App Store</a>
              <a href="#" class="btn btn-dark btn-md px-4 border-width-2"><span class="icon-android mr-3"></span>Play Store</a>
            </p>
          </div>
          <div class="col-md-6 ml-auto align-self-end">
            <img src="images/apps.png" alt="Image" class="img-fluid">
          </div>
        </div>
      </div>
    </section>
