@model JobPortalApplication.Models.CompanyModel.InterviewDto

@{
    ViewData["Title"] = "ScheduleInterview";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

@if (ViewBag.SuccessMessage != null)
{
    <div id="successMessage" data-message="@ViewBag.SuccessMessage"></div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div id="errorMessage" data-message="@ViewBag.ErrorMessage"></div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var key in ViewData.ModelState.Keys)
            {
                foreach (var error in ViewData.ModelState[key].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

@if (ViewData.ModelState["UserId"]?.Errors?.Count > 0)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState["UserId"].Errors)
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
@if (ViewData.ModelState["JobId"]?.Errors?.Count > 0)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState["JobId"].Errors)
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<h1>ScheduleInterview</h1>

<h4>Interview</h4>
<hr />
<div class="row">
    <div class="col-md-4">
<form asp-action="ScheduleInterview" asp-controller="JobListing" method="post" >
        @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Candidate Name</label>
    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
             @{ /*
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
                */
                }
                                <span asp-validation-for="UserId" class="text-danger"></span>

            </div>
            <div class="form-group" hidden>
                <label asp-for="JobId" class="control-label"></label>
    <select asp-for="JobId" class="form-control" asp-items="ViewBag.JobId"></select>

                             @{ /*

                <select asp-for="JobId" class ="form-control" asp-items="ViewBag.JobId"></select>
                */
                }
                      <span asp-validation-for="JobId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="InterviewDate" class="control-label"></label>
                <input type="date"  asp-for="InterviewDate" class="form-control" />
                <span asp-validation-for="InterviewDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input type="time" asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
           
           
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
