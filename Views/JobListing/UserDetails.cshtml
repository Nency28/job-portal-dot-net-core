@model JobPortalApplication.Models.Users.Userdata

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h2>User Details</h2>

<div class="container mt-4">
    <form>
        <div class="form-group row">
            <label for="Gender" class="col-sm-2 col-form-label">Gender</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="Gender" value="@Model.Gender" readonly />
            </div>
            <label for="Dob" class="col-sm-2 col-form-label">Date of Birth</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="Dob" value="@Model.Dob.ToString("yyyy-MM-dd")" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label for="MartialStatus" class="col-sm-2 col-form-label">Marital Status</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="MartialStatus" value="@Model.MartialStatus" readonly />
            </div>
            <label for="Category" class="col-sm-2 col-form-label">Category</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="Category" value="@Model.Category" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label for="Address" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="Address" value="@Model.Address" readonly />
            </div>
            <label for="Language" class="col-sm-2 col-form-label">Language</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="Language" value="@Model.Language" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label for="Hometown" class="col-sm-2 col-form-label">Hometown</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="Hometown" value="@Model.Hometown" readonly />
            </div>
            <label for="Pincode" class="col-sm-2 col-form-label">Pincode</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="Pincode" value="@Model.Pincode" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label for="Course" class="col-sm-2 col-form-label">Course</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="Course" value="@Model.course?.CourseName" readonly />
            </div>
            <label for="Duration" class="col-sm-2 col-form-label">Duration</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="Duration" value="@Model.Duration" readonly />
            </div>
        </div>
        <div class="form-group row">
            <label for="Grade" class="col-sm-2 col-form-label">Grade</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="Grade" value="@Model.Grade" readonly />
            </div>
            <label for="Skills" class="col-sm-2 col-form-label">Skills</label>
            <div class="col-sm-4">
                <input type="text" class="form-control mb-3" id="Skills" value="@Model.Skills" readonly />
            </div>
        </div>
     <div class="form-group row">
    <label for="Resume" class="col-sm-2 col-form-label">Resume</label>
    <div class="col-sm-4">
        @if (Model.Resume != null)
        {

           <a href="@Url.Content("~/Files/" + Model.Resume)" target="_blank">  
                <i class="fa fa-file-pdf" style="font-size: 24px; color: blue;"></i>
            </a>
        }
    </div>
</div> 

