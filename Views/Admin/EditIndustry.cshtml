@model JobPortalApplication.Models.Industry

@{
    ViewData["Title"] = "EditIndustry";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h1>EditIndustry</h1>

<h4>Industry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditIndustry">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IndustryId" />
            <div class="form-group">
                <label asp-for="IndustryName" class="control-label"></label>
                <input asp-for="IndustryName" class="form-control" />
                <span asp-validation-for="IndustryName" class="text-danger"></span>
            </div>
           
          
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
