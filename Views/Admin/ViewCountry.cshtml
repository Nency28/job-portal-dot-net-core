@model IEnumerable<JobPortalApplication.Models.Country>

@{
    ViewData["Title"] = "ViewCountry";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h1>Country</h1>

<p>
    <div class="row justify-content-end">
    <div class="col-auto">
<form asp-action="AddCountry" method="get">
    <button type="submit" class="btn btn-primary"><span class="mr-2">+</span>Add Country</button>
</form>
</div>
</div></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
           
            <td>
                 <a asp-action="EditCountry" asp-route-id="@item.CountryId"><i class="fa-solid fa-pen-to-square" style="font-size: 24px;"></i></a> 
                 

               <a href="#" onclick="confirmDelete('@item.CountryId')"><i class="fa-solid fa-trash" style="font-size: 24px;"></i></a>


                </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm("Are you sure you want to delete this qualification?")) {
                window.location.href = '@Url.Action("DeleteCountry", "Admin")/' + id;
            }
        }
    </script>
}