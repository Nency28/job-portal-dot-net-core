@model IEnumerable<JobPortalApplication.Models.Qualification>

@{
    ViewData["Title"] = "ViewQualification";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}


<p>
 <div class="row justify-content-end">
    <div class="col-auto">
<form asp-action="AddQualification" method="get">
    <button type="submit" class="btn btn-primary"><span class="mr-2">+</span>Add Qualification</button>
</form>
</div>
</div></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QualificationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QualificationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseType)
            </td>
            <td>
                 <a asp-action="EditQualification" asp-route-id="@item.QuaId"><i class="fa-solid fa-pen-to-square" style="font-size: 24px;"></i></a> 
                  <a href="#" onclick="confirmDelete('@item.QuaId')"><i class="fa-solid fa-trash" style="font-size: 24px;"></i></a>

                 

            </td>
        </tr>

}
    </tbody>
</table>
@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm("Are you sure you want to delete this qualification?")) {
                window.location.href = '@Url.Action("DeleteQualification", "Admin")/' + id;
            }
        }
    </script>
}