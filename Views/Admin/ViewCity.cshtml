@model IEnumerable<JobPortalApplication.Models.City>

@{
    ViewData["Title"] = "ViewCity";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h1>City</h1>

<p>
 <div class="row justify-content-end">
    <div class="col-auto">
<form asp-action="AddCity" method="get">
    <button type="submit" class="btn btn-primary"><span class="mr-2">+</span>Add City</button>
</form>
</div>
</div></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="EditCity" asp-route-id="@item.CityId"><i class="fa-solid fa-pen-to-square" style="font-size: 24px;"></i></a> 
                 <a asp-action="DeleteCity" asp-route-id="@item.CityId" method="post" onsubmit="return confirm('Are you sure you want to delete this city?')"><i class="fa-solid fa-trash" style="font-size: 24px;"></i></a> 

                </td>
        </tr>
}
    </tbody>
</table>
