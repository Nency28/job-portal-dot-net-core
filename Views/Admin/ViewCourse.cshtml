@model IEnumerable<JobPortalApplication.Models.Course>

@{
    ViewData["Title"] = "ViewCourse";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<h1>ViewCourse</h1>

<p>
    <div class="row justify-content-end">
    <div class="col-auto">
<form asp-action="AddCourse" method="get">
    <button type="submit" class="btn btn-primary"><span class="mr-2">+</span>Add Course</button>
</form>
</div>
</div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseType)
            </td>
             <td>
                 <a asp-action="EditCourse" asp-route-id="@item.CourseId"><i class="fa-solid fa-pen-to-square" style="font-size: 24px;"></i></a> 
                 
                 <a asp-action="DeleteCourse" asp-route-id="@item.CourseId" method="post" onsubmit="return confirm('Are you sure you want to delete this Industry?')"><i class="fa-solid fa-trash" style="font-size: 24px;"></i></a> 

            </td>
        </tr>
}
    </tbody>
</table>
