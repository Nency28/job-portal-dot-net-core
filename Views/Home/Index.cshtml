        <div class="row mb-5 justify-content-center">
          <div class="col-md-7 text-center">
            <h2 class="section-title mb-2">@ViewBag.JobCount Job Listed</h2>
          </div>
        </div>
        @foreach (var item in Model) {
        <ul class="job-listings mb-5">

          <li class="job-listing d-block d-sm-flex pb-3 pb-sm-0 align-items-center">
            <a asp-action="SingleJob" asp-controller="JobListing" asp-route-id="@item.JobId"></a>
            <div class="job-listing-logo">
               @if (!string.IsNullOrEmpty(item.Company.Image))
               {
                 <img src="~/Image/@item.Company.Image" alt="Company Image" style="width:100px; height:100px;" />
               }            </div>

            <div class="job-listing-about d-sm-flex custom-width w-100 justify-content-between mx-4">
              <div class="job-listing-position custom-width w-50 mb-3 mb-sm-0">
                <h2>@Html.DisplayFor(modelItem => item.JobTitle)</h2>
                <strong> @Html.DisplayFor(modelItem => item.Company.CompanyName)</strong>
              </div>
              <div class="job-listing-location mb-3 mb-sm-0 custom-width w-25">
                <span class="icon-room"></span>   @Html.DisplayFor(modelItem => item.Address)

              </div>
              <div class="job-listing-meta">
                <span class="badge badge-primary">@Html.DisplayFor(modelItem => item.WorkType)</span>
                  

              </div>
              

              
            </div>
            
          </li>
        
         
         
        
          

          
        </ul>
                 

        }

       <div class="row pagination-wrap">
    <div class="col-md-6 text-center text-md-left mb-4 mb-md-0">
        <span>Showing @((ViewBag.CurrentPage - 1) * 5 + 1) - @(Math.Min(ViewBag.CurrentPage * 5, ViewBag.JobCount)) Of @ViewBag.JobCount Jobs</span>
    </div>
    <div class="col-md-6 text-center text-md-right">
        <div class="custom-pagination ml-auto">
            @if (ViewBag.CurrentPage > 1)
            {
                <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, searchTerm = ViewContext.HttpContext.Request.Query["searchTerm"].ToString(), workType = ViewContext.HttpContext.Request.Query["workType"].ToString(), city = ViewContext.HttpContext.Request.Query["city"].ToString() })" class="prev">Prev</a>
            }

            <div class="d-inline-block">

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <a href="@Url.Action("Index", new { page = i, searchTerm = ViewContext.HttpContext.Request.Query["searchTerm"].ToString(), workType = ViewContext.HttpContext.Request.Query["workType"].ToString(), city = ViewContext.HttpContext.Request.Query["city"].ToString() })" class="@(ViewBag.CurrentPage == i ? "active" : "")">@i</a>
                }
            </div>

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, searchTerm = ViewContext.HttpContext.Request.Query["searchTerm"].ToString(), workType = ViewContext.HttpContext.Request.Query["workType"].ToString(), city = ViewContext.HttpContext.Request.Query["city"].ToString() })" class="next">Next</a>
            }
        </div>
    </div>
</div>




